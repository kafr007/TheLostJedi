<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.mykescraft.thelostjedi.FirstQuestion"
    android:orientation="vertical"
    android:background="#000000">

    <TextView
        android:id="@+id/first_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/first_question"
        android:textColor="#FFFF8D"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:fontFamily="@font/deathstar"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:src="@drawable/blue_lightsaber"/>



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RadioButton
            android:id="@+id/jedi_knight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jedi_knights"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/deathstar"

            />

        <RadioButton
            android:id="@+id/jedi_consular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jedi_consular"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/deathstar"
            />

        <RadioButton
            android:id="@+id/jedi_sentinel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jedi_sentinel"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:fontFamily="@font/deathstar"

            />

    </RadioGroup>

    <Button
        android:id="@+id/button_next"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:background="#01579B"
        android:textColor="#FFFF8D"
        android:onClick="rightFirstQuestion"
        android:fontFamily="@font/deathstar"
        />

</LinearLayout>