<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_medium"
    tools:context="com.mykescraft.thelostjedi.FirstQuestion"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/first_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/first_question"
        android:textColor="@color/starWarsYellow"
        android:layout_marginBottom="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_large"
        android:textSize="@dimen/fontsize"
        android:fontFamily="@font/deathstar"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:src="@drawable/blue_lightsaber"/>



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RadioButton
            android:id="@+id/jedi_knight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jedi_knights"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="@dimen/padding_small"
            android:background="@color/colorPrimaryWhite"
            android:fontFamily="@font/deathstar"

            />

        <RadioButton
            android:id="@+id/jedi_consular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jedi_consular"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="@dimen/padding_small"
            android:background="@color/colorPrimaryWhite"
            android:fontFamily="@font/deathstar"
            />

        <RadioButton
            android:id="@+id/jedi_sentinel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jedi_sentinel"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/colorPrimaryWhite"
            android:fontFamily="@font/deathstar"

            />

    </RadioGroup>

    <Button
        android:id="@+id/button_next"
        android:layout_marginTop="@dimen/padding_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:background="@color/buttonBackground"
        android:textColor="@color/starWarsYellow"
        android:onClick="rightFirstQuestion"
        android:fontFamily="@font/deathstar"
        />

</LinearLayout>