<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.mykescraft.thelostjedi.SixthQuestion"
    android:orientation="vertical"
    android:background="#9E9E9E">

    <TextView
        android:id="@+id/sixth_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sixth_question"
        android:textColor="#FFFF8D"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:fontFamily="@font/deathstar"
        android:layout_marginTop="32dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:src="@drawable/fisto_mace"/>



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RadioButton
            android:id="@+id/kit_fisto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kit_fisto"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/deathstar"

            />

        <RadioButton
            android:id="@+id/mace_windu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mace_windu"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/deathstar"
            />

        <RadioButton
            android:id="@+id/plo_koon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plo_koon"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:fontFamily="@font/deathstar"

            />

    </RadioGroup>

    <Button
        android:id="@+id/button_next"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:background="#01579B"
        android:textColor="#FFFF8D"
        android:onClick="rightSixthQuestion"
        android:fontFamily="@font/deathstar"
        />

</LinearLayout>