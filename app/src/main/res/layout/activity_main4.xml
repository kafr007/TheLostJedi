<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.mykescraft.thelostjedi.FourthQuestion"
    android:orientation="vertical"
    android:background="#616161">

    <TextView
        android:id="@+id/fourth_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fourth_question"
        android:textColor="#FFFF8D"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:fontFamily="@font/deathstar"
        android:layout_marginTop="32dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:src="@drawable/yoda_teaching"/>



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RadioButton
            android:id="@+id/ataru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ataru"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/deathstar"

            />

        <RadioButton
            android:id="@+id/shii_cho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shii_cho"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/deathstar"
            />

        <RadioButton
            android:id="@+id/makashi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/makashi"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:fontFamily="@font/deathstar"

            />

    </RadioGroup>

    <Button
        android:id="@+id/button_next"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:background="#01579B"
        android:textColor="#FFFF8D"
        android:onClick="rightFourthQuestion"
        android:fontFamily="@font/deathstar"
        />

</LinearLayout>